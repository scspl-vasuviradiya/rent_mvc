@model ClothesRental.Models.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Products Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-tshirt me-2"></i>Products Management
    </h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Add Product
    </a>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-4">
                <label for="searchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by code or name..." />
            </div>
            <div class="col-md-3">
                <label for="filterCategory" class="form-label">Category</label>
                <select class="form-select" id="filterCategory" name="filterCategory">
                    <option value="all" selected="@(Model.FilterCategory == "all")">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category" selected="@(Model.FilterCategory == category)">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterStatus" class="form-label">Status</label>
                <select class="form-select" id="filterStatus" name="filterStatus">
                    <option value="all" selected="@(Model.FilterStatus == "all")">All Status</option>
                    <option value="Available" selected="@(Model.FilterStatus == "Available")">Available</option>
                    <option value="Delivered" selected="@(Model.FilterStatus == "Delivered")">Delivered</option>
                    <option value="Reserved" selected="@(Model.FilterStatus == "Reserved")">Reserved</option>
                    <option value="Washing" selected="@(Model.FilterStatus == "Washing")">Washing</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary d-block w-100">
                    <i class="fas fa-search me-1"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products Table -->
@if (Model.Products.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Code</th>
                            <th>Category</th>
                            <th>Size</th>
                            <th>Price/Day</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@product.ImageUrl" alt="@product.Name" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold">@product.Name</div>
                                            <small class="text-muted">@product.Color</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@product.Code</td>
                                <td>@product.Category</td>
                                <td>@product.Size</td>
                                <td>$@product.PricePerDay</td>
                                <td>
                                    <span class="badge bg-@product.StatusColor">@product.StatusText</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?')">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-tshirt fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No products found</h3>
        <p class="text-muted">No products match your search criteria.</p>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add First Product
        </a>
    </div>
}