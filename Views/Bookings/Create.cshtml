@model ClothesRental.Models.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Complete Booking";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">
                    <i class="fas fa-calendar-check me-2"></i>Complete Booking
                </h2>
            </div>
            <div class="card-body">
                <!-- Booking Summary -->
                <div class="bg-light p-4 rounded mb-4">
                    <h5 class="mb-3">Booking Summary</h5>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Dates Available</strong> - These dates have been verified as available
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <img src="@Model.ProductImageUrl" alt="@Model.ProductName" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                        <div>
                            <h6 class="mb-1">@Model.ProductName</h6>
                            <p class="text-muted mb-0">Code: @Model.ProductCode</p>
                        </div>
                    </div>
                    
                    <div class="row text-center">
                        <div class="col-md-3">
                            <small class="text-muted">Start Date</small>
                            <div class="fw-bold">@Model.StartDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">End Date</small>
                            <div class="fw-bold">@Model.EndDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Duration</small>
                            <div class="fw-bold">@Model.TotalDays days</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Total Price</small>
                            <div class="fw-bold text-primary">$@((Model.TotalDays * Model.PricePerDay).ToString("F2"))</div>
                        </div>
                    </div>
                </div>

                <!-- Customer Details Form -->
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="StartDate" />
                    <input type="hidden" asp-for="EndDate" />
                    
                    <h5 class="mb-3">Your Details</h5>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerName" class="form-label">
                                <i class="fas fa-user me-1"></i>Full Name
                            </label>
                            <input asp-for="CustomerName" class="form-control" required />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerEmail" class="form-label">
                                <i class="fas fa-envelope me-1"></i>Email Address
                            </label>
                            <input asp-for="CustomerEmail" class="form-control" type="email" required />
                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerPhone" class="form-label">
                                <i class="fas fa-phone me-1"></i>Phone Number
                            </label>
                            <input asp-for="CustomerPhone" class="form-control" type="tel" required />
                            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerAddress" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>Address
                            </label>
                            <input asp-for="CustomerAddress" class="form-control" required />
                            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-credit-card me-1"></i>
                            Complete Booking ($@((Model.TotalDays * Model.PricePerDay).ToString("F2")))
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}