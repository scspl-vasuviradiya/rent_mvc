@model ClothesRental.Models.ViewModels.BookingListViewModel
@{
    ViewData["Title"] = "All Bookings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-calendar me-2"></i>All Bookings
    </h2>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-3">
                <label for="filterStatus" class="form-label">Status</label>
                <select class="form-select" id="filterStatus" name="filterStatus">
                    <option value="all" selected="@(Model.FilterStatus == "all")">All Status</option>
                    <option value="Confirmed" selected="@(Model.FilterStatus == "Confirmed")">Confirmed</option>
                    <option value="Delivered" selected="@(Model.FilterStatus == "Delivered")">Delivered</option>
                    <option value="Active" selected="@(Model.FilterStatus == "Active")">Active</option>
                    <option value="Returned" selected="@(Model.FilterStatus == "Returned")">Returned</option>
                    <option value="Washing" selected="@(Model.FilterStatus == "Washing")">Washing</option>
                    <option value="Completed" selected="@(Model.FilterStatus == "Completed")">Completed</option>
                    <option value="Cancelled" selected="@(Model.FilterStatus == "Cancelled")">Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterStartDate" class="form-label">Start Date From</label>
                <input type="date" class="form-control" id="filterStartDate" name="filterStartDate" value="@Model.FilterStartDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label for="filterEndDate" class="form-label">End Date To</label>
                <input type="date" class="form-control" id="filterEndDate" name="filterEndDate" value="@Model.FilterEndDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary d-block w-100">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Bookings List -->
@if (Model.Bookings.Any())
{
    @foreach (var booking in Model.Bookings)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-2">
                        <img src="@booking.ProductImageUrl" alt="@booking.ProductName" class="img-fluid rounded" style="height: 80px; object-fit: cover;">
                    </div>
                    <div class="col-md-3">
                        <h6 class="mb-1">@booking.ProductName</h6>
                        <p class="text-muted mb-1">Code: @booking.ProductCode</p>
                        <p class="text-muted mb-0">Booking #@booking.Id</p>
                    </div>
                    <div class="col-md-2">
                        <small class="text-muted">Customer</small>
                        <div class="fw-bold">@booking.CustomerName</div>
                        <small class="text-muted">@booking.CustomerEmail</small>
                    </div>
                    <div class="col-md-2">
                        <small class="text-muted">Rental Period</small>
                        <div class="fw-bold">@booking.StartDate.ToString("MMM dd") - @booking.EndDate.ToString("MMM dd")</div>
                    </div>
                    <div class="col-md-1">
                        <small class="text-muted">Total</small>
                        <div class="fw-bold text-primary">$@booking.TotalPrice</div>
                    </div>
                    <div class="col-md-2">
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="badge bg-@booking.StatusColor">@booking.StatusText</span>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form asp-action="UpdateStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@booking.Id" />
                                            <input type="hidden" name="status" value="Delivered" />
                                            <button type="submit" class="dropdown-item">Mark as Delivered</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form asp-action="UpdateStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@booking.Id" />
                                            <input type="hidden" name="status" value="Returned" />
                                            <button type="submit" class="dropdown-item">Mark as Returned</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form asp-action="UpdateStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@booking.Id" />
                                            <input type="hidden" name="status" value="Completed" />
                                            <button type="submit" class="dropdown-item">Mark as Completed</button>
                                        </form>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a href="@Url.Action("Details", new { id = booking.Id })" class="dropdown-item">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No bookings found</h3>
        <p class="text-muted">Bookings will appear here once customers make reservations.</p>
    </div>
}